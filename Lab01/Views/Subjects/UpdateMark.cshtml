@model Lab01.Models.Mark

@{
    ViewData["Title"] = "UpdateMark";
}

<h1>UpdateMark</h1>

<h4>Are you sure want to update mark?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMark">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentCode" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Mark1" class="control-label"></label>
                <input asp-for="Mark1" class="form-control" />
                <span asp-validation-for="Mark1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
