@model IEnumerable<Lab01.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>List of students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
